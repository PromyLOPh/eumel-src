    wahl := felderzahl (bild)
  ELIF wahl > felderzahl (bild) THEN
    wahl := 1
  END IF;
  aktuelle wahl markieren (bild, wahl) .

alte wahl demarkieren :
  cursor (w anf (wahl), h zeile);
  out (" ");
  feld bearbeiten (bild, wahl,
    PROC (TEXT CONST, INT CONST, INT CONST) m out);
  out ("  ") .

