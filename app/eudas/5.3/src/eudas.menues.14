PROC exit wahl (SATZ CONST bild, INT CONST wahl) :

  cursor (w anf (1), h zeile);
  w anf (wahl) - w anf (1) + 1 TIMESOUT " ";
  feld bearbeiten (bild, wahl,
    PROC (TEXT CONST, INT CONST, INT CONST) m out);
  gesamtlaenge - w anf (wahl + 1) + 2 TIMESOUT " "

